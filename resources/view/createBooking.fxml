<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Scene xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.createGuestController">
        <VBox fillWidth="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="225.0" style="-fx-background-color: lightblue;">

            <!-- Last Name -->
            <Label text="book a room">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></Label>
            <!-- First Name -->
            <Label text="choose room typ" />
      <ChoiceBox prefWidth="150.0">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </ChoiceBox>

            <!-- Birthdate -->
            <Label text="Day of arrival" />
            <DatePicker fx:id="birthDate">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></DatePicker>

            <!-- Address -->
            <Label text="Departure" />
      <DatePicker>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </DatePicker>
      <HBox prefHeight="56.0" prefWidth="215.0" style="-fx-border-color: blue;">
         <children>
            <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0">
               <children>
            
                        <!-- Passport Number -->
                        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="108.0" text="free rooms:" textAlignment="RIGHT" />
                  <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="108.0" text="price per day :" textAlignment="RIGHT" />
                  <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="108.0" text="price per day :" textAlignment="RIGHT" />
               </children>
               <padding>
                  <Insets right="5.0" />
               </padding>
            </VBox>
            <VBox prefHeight="55.0" prefWidth="100.0" style="-fx-background-color: white;">
               <children>
                  <Label prefHeight="17.0" prefWidth="108.0" text="0" textAlignment="RIGHT">
                     <VBox.margin>
                        <Insets left="5.0" />
                     </VBox.margin>
                  </Label>
                  <Label prefHeight="17.0" prefWidth="108.0" text="60" textAlignment="RIGHT">
                     <VBox.margin>
                        <Insets left="5.0" />
                     </VBox.margin>
                  </Label>
                  <Label prefHeight="17.0" prefWidth="108.0" text="360" textAlignment="RIGHT">
                     <VBox.margin>
                        <Insets left="5.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <HBox alignment="BOTTOM_CENTER" prefHeight="190.0" prefWidth="215.0">
         <children>
            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="101.0" text="cancel booking" />
      
                  <Button onMouseClicked="#sendGuestData" prefHeight="23.0" prefWidth="114.0" text="next step (guest)" />
         </children>
      </HBox>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
        </VBox>
</Scene>
