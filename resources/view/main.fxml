<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Scene xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">

    <HBox prefHeight="768.0" prefWidth="1024.0">
        <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="1024.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Allocation">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="24.0" layoutY="20.0" text="Occupied Rooms">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="tableOccupiedRooms" layoutX="24.0" layoutY="55.0" prefHeight="600.0" prefWidth="965.0">
                                    <columns>
                                        <TableColumn fx:id="columnRoomNr" prefWidth="62.0" text="Room Nr." />
                                        <TableColumn fx:id="columnGuestName" prefWidth="130.0" text="Guest" />
                                        <TableColumn fx:id="columnArrival" prefWidth="81.0" text="Arrival" />
                                        <TableColumn fx:id="columnDeparture" prefWidth="94.0" text="est. Depature" />
                                    </columns>
                                </TableView>
                                <Button layoutX="651.0" layoutY="21.0" mnemonicParsing="false" onAction="#call_detailsController" text="View Details" />
                                <Button layoutX="781.0" layoutY="21.0" mnemonicParsing="false" text="Add a Service" />
                                <Button fx:id="buttonCheckOut" layoutX="907.0" layoutY="21.0" mnemonicParsing="false" onAction="#checkOut" text="CHECK OUT" />
                                <Button fx:id="logoutButton" layoutX="930.0" layoutY="670.0" mnemonicParsing="false" onMouseClicked="#logout" text="Log Out" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Reservations">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <!-- Booking -->
                                <Button fx:id="createBooking" layoutX="128.0" layoutY="18.0" onMouseClicked="#call_createBookingController" text="New Booking" />
                                <TableView fx:id="tableBookings" layoutX="29.0" layoutY="57.0" prefHeight="600.0" prefWidth="965.0">
                                    <columns>
                                        <TableColumn fx:id="columnBookingArrival" prefWidth="90.0" text="Arrival" />
                                        <TableColumn fx:id="columnBookingDeparture" prefWidth="93.0" text="est. Depature" />
                                        <TableColumn fx:id="columnBookingGuest" prefWidth="191.0" text="Guest" />
                              <TableColumn fx:id="columnBookingStatus" prefWidth="75.0" text="Status" />
                                    </columns>
                                </TableView>
                                <Label layoutX="24.0" layoutY="17.0" text="Bookings">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Button fx:id="btnCheckIn" layoutX="269.0" layoutY="18.0" mnemonicParsing="false" onMouseClicked="#checkIn" text="CHECK IN" />
                                <Button fx:id="buttonStorno" layoutX="347.0" layoutY="18.0" mnemonicParsing="false" onAction="#cancelBooking" text="STORNO" />
                                <DatePicker fx:id="dateFrom" layoutX="602.0" layoutY="18.0" onAction="#updateTableBookings" />
                                <DatePicker fx:id="dateUntil" layoutX="815.0" layoutY="18.0" onAction="#updateTableBookings" />
                                <Label layoutX="602.0" layoutY="4.0" text="from" />
                                <Label layoutX="815.0" layoutY="4.0" text="until" />
                        <CheckBox fx:id="checkBoxShowAll" layoutX="522.0" layoutY="22.0" mnemonicParsing="false" onAction="#updateTableBookings" text="Show All" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="adminTab" text="Administrator">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                        <Label layoutX="668.0" layoutY="50.0" text="Create a Room:">
                           <font>
                              <Font name="System Bold" size="30.0" />
                           </font>
                        </Label>
                        <Label layoutX="671.0" layoutY="144.0" text="Choose the Room Type:">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="roomType" layoutX="671.0" layoutY="165.0" value="Single Room">
                           <items>
                              <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="Single Room" />
                                 <String fx:value="Double Room" />
                                 <String fx:value="Suite" />
                                 <String fx:value="superiorDoubleRoom" />
                              </FXCollections>
                           </items>
                        </ChoiceBox>
                        <Label layoutX="671.0" layoutY="221.0" text="Choose the max. Capacity:">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="roomCapacity" layoutX="671.0" layoutY="242.0" value="1">
                           <items>
                              <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="1" />
                                 <String fx:value="2" />
                                 <String fx:value="3" />
                                 <String fx:value="4" />
                              </FXCollections>
                           </items>
                        </ChoiceBox>
                        <Label layoutX="670.0" layoutY="304.0" text="Enter the Room Price per Night:">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                        <TextField fx:id="roomPrice" layoutX="670.0" layoutY="325.0" prefHeight="25.0" prefWidth="295.0" />
                        <Label layoutX="671.0" layoutY="396.0" text="Enter the Room Size:">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                        <TextField fx:id="roomSize" layoutX="671.0" layoutY="417.0" prefHeight="25.0" prefWidth="294.0" />
                        <Label layoutX="671.0" layoutY="485.0" text="Enter the availiable Room Facilites:">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                        <TextField fx:id="roomFacilitys" layoutX="671.0" layoutY="506.0" prefHeight="25.0" prefWidth="293.0" />
                        <Button layoutX="781.0" layoutY="559.0" onMouseClicked="#sendRoomData" prefHeight="44.0" prefWidth="74.0" text="Submit" />
                        <Label layoutX="43.0" layoutY="50.0" text="Create/Edit Guest:">
                           <font>
                              <Font name="System Bold" size="30.0" />
                           </font>
                        </Label>
                        <Label layoutX="43.0" layoutY="190.0" text="Last Name" />
                        <TextField fx:id="lastName" layoutX="42.0" layoutY="215.0" />
                        <Label layoutX="42.0" layoutY="247.0" text="First Name" />
                        <TextField fx:id="firstName" layoutX="42.0" layoutY="271.0" />
                        <Label layoutX="42.0" layoutY="302.0" text="Birthdate" />
                        <DatePicker fx:id="birthDate" layoutX="42.0" layoutY="325.0" />
                        <Label layoutX="42.0" layoutY="356.0" text="Address" />
                        <TextField fx:id="address" layoutX="42.0" layoutY="380.0" />
                        <Label layoutX="42.0" layoutY="415.0" text="ZIP Code" />
                        <TextField fx:id="zipCode" layoutX="42.0" layoutY="440.0" />
                        <Label layoutX="42.0" layoutY="474.0" text="Country" />
                        <TextField fx:id="country" layoutX="42.0" layoutY="498.0" />
                        <Label layoutX="42.0" layoutY="537.0" text="Phone" />
                        <TextField fx:id="phone" layoutX="42.0" layoutY="561.0" />
                        <Label layoutX="43.0" layoutY="595.0" text="E-Mail Address" />
                        <TextField fx:id="eMail" layoutX="42.0" layoutY="619.0" />
                        <Label layoutX="44.0" layoutY="653.0" text="Passport Number" />
                        <TextField fx:id="passportNumber" layoutX="43.0" layoutY="675.0" />
                        <Label layoutX="42.0" layoutY="136.0" text="Company Name" />
                        <TextField fx:id="compName" layoutX="43.0" layoutY="161.0" />
                        <CheckBox layoutX="42.0" layoutY="102.0" mnemonicParsing="false" text="Guest and Customer have the same Billing Address" />
                        <VBox alignment="CENTER" layoutX="263.0" layoutY="102.0" prefHeight="630.0" prefWidth="293.0">
                           <children>
                              <Label alignment="TOP_LEFT" text="Entries in our Database:" />
                              <ListView fx:id="listViewFoundGuest" fixedCellSize="0.0" prefHeight="255.0" prefWidth="273.0">
                                 <VBox.margin>
                                    <Insets bottom="200.0" left="10.0" right="10.0" />
                                 </VBox.margin>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                              </ListView>
                              <Button fx:id="addGuest" onMouseClicked="#sendGuestData" prefHeight="23.0" prefWidth="120.0" text="Create Guest">
                                 <VBox.margin>
                                    <Insets bottom="20.0" top="20.0" />
                                 </VBox.margin>
                              </Button>
                              <Button fx:id="editGuest" onMouseClicked="#sendGuestData" prefHeight="23.0" prefWidth="120.0" text="Edit Guest" />
                           </children>
                        </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </HBox>
</Scene>
