<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.mainController">

         <HBox prefHeight="768.0" prefWidth="1024.0">
      <TabPane prefHeight="200.0" prefWidth="1024.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="allocation">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="24.0" layoutY="20.0" text="occupied rooms">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <TableView layoutX="24.0" layoutY="55.0" prefHeight="536.0" prefWidth="886.0">
                          <columns>
                            <TableColumn prefWidth="48.0" text="room#" />
                            <TableColumn prefWidth="144.0" text="Guest" />
                              <TableColumn prefWidth="81.0" text="Arrival" />
                              <TableColumn prefWidth="94.0" text="est. Depature" />
                          </columns>
                        </TableView>
                        <Button layoutX="928.0" layoutY="106.0" mnemonicParsing="false" text="details" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="reservations">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                             <!-- Booking -->
                             <Button fx:id="createBooking" layoutX="214.0" layoutY="18.0" onMouseClicked="#call_createBookingController" text="New Booking" />
                        <TableView layoutX="24.0" layoutY="55.0" prefHeight="536.0" prefWidth="886.0">
                           <columns>
                              <TableColumn prefWidth="90.0" text="Arrival" />
                              <TableColumn prefWidth="93.0" text="est. Depature" />
                              <TableColumn prefWidth="191.0" text="Guest" />
                           </columns>
                        </TableView>
                        <Label layoutX="24.0" layoutY="17.0" text="Bookings">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="settings">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                             <!-- Update -->
                             <Button fx:id="createGuest" layoutX="43.0" layoutY="42.0" onMouseClicked="#call_createGuestController" text="Create Guest" />
                             <!-- Report -->
                             <Button fx:id="createRoom" layoutX="43.0" layoutY="83.0" onMouseClicked="#call_createRoomController" prefHeight="25.0" prefWidth="96.0" text="Create Room" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
         </HBox>
</Scene>
